<h1><%= markdown @wiki.subject %></h1>

<%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>




<div class="row">
  <div class="col-xs-6">
      <%= @wiki.body %>
  </div>
   <div class="col-xs-6">
    <%= form_for [@wiki] do |f| %>
     <div class="form-group">
        <%= f.label :subject %>
        <%= f.text_field :subject, class: 'form-control', placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>
</div> 

<%= render partial: 'join', locals: { user: @user } %>
  </div>

   

     