<div class="row">
  <div class="col-xs-6">
    <h5> <strong> Preview </strong></h5>
      <%= @wiki.body %>
  </div>
   <div class="col-xs-6">
    <%= form_for [@wiki] do |f| %>
     <div class="form-group">
        <%= f.label :subject %>
        <%= f.text_field :subject, class: 'form-control', placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter post title" %>
      </div>
              <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>

    <% end %>

  </div>
</div> 
