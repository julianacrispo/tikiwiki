    </ul>
  </div>
  <div class="col-md-8">
    <%= render partial: 'form', locals: { wiki: @wiki } %>
  </div>
</div>

<% if current_user.premium %>
 <%= form_tag("/wikis/#{@wiki.id}/add_collaborator", method: "post") do %>
  <%= label_tag(:user_id, "User id:") %>
  <%= text_field_tag(:user_id) %>
  <%= submit_tag("Add collaborator") %>
<% end %>

 <%= form_tag("/wikis/#{@wiki.id}/remove_collaborator", method: "post") do %>
  <%= label_tag(:user_id, "User id:") %>
  <%= text_field_tag :user_id %>
  <%= submit_tag("Remove collaborator") %>
<% end %>
<% end %>
